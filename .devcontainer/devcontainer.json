{
	"name": "VM Tool Dev",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.flake8",
				"charliermarsh.ruff",
				"redhat.ansible"
			]
		}
	},
	"postCreateCommand": "pip install -e .[dev] && pip install pre-commit && pre-commit install"
}
